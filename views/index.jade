
mixin example-link(name, label)
    a.label(
        href='index.php?example=',
        href=$name,
        class='label-'.($currentExample === $name ? 'primary' : 'default')
    )= $label


doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title Tale Jade Live Compiler

        <!--[if lt IE 9]>
            script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
            script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
        <![endif]-->

        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='styles/common.less')

    body

        .container

            .page-header
                h1.clearfix
                    | Tale Jade Sandbox
                    small.pull-right
                        a(href='http://jade.talesoft.io', title='The Tale Jade ReadMe File')
                            i.fa.fa-home
                            | About Tale Jade
                        | &nbsp;|&nbsp;
                        a(href='https://github.com/Talesoft/tale-jade')
                            i.fa.fa-github
                            | GitHub Repository


            .row
                .col-md-3
                    .panel.panel-default
                        .panel-heading
                            h2.panel-title Options
                        .panel-body
                            .container
                                .checkbox
                                    label
                                        input#prettyCheckbox(type='checkbox', checked)
                                        | Format HTML (Pretty Mode)
                                .checkbox
                                    label
                                        input#standAloneCheckbox(type='checkbox')
                                        | Compile for Stand-Alone use
                    .panel.panel-default
                        .panel-heading
                            h2.panel-title Examples
                        .panel-body
                            +example-link('index', 'Index')
                            +example-link('classes', 'Classes')
                            +example-link('ids', 'IDs')
                            +example-link('nesting', 'Nesting')
                            +example-link('block-expansion', 'Block Expansion')
                            +example-link('variables', 'Variables')
                            +example-link('mixins', 'Mixins')
                            +example-link('html-5', 'HTML5')
                            +example-link('xml', 'XML')
                            +example-link('attributes', 'Attributes')
                            +example-link('blocks', 'Blocks')
                .col-md-9

                    .panel.panel-info
                        .panel-heading
                            h2.panel-title Jade
                        .panel-body
                            .editor.editor-jade#jadeEditor

                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title HTML/XML/PHTML/PXML
                        .panel-body
                            .editor.editor-php#phpEditor

        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.2.0/ace.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.2.0/theme-dreamweaver.js')
        include ../scripts/common.coffee
